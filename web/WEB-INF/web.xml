<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RectangleAreaController</servlet-name>
        <servlet-class>Controllers.RectangleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CircleAreaController</servlet-name>
        <servlet-class>Controllers.CircleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TriangleController</servlet-name>
        <servlet-class>Controllers.TriangleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Challenge2RectangleController</servlet-name>
        <servlet-class>Challenge2Controllers.Challenge2RectangleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Challenge2TriangleController</servlet-name>
        <servlet-class>Challenge2Controllers.Challenge2TriangleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Challenge2CircleController</servlet-name>
        <servlet-class>Challenge2Controllers.Challenge2CircleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RectangleAreaController</servlet-name>
        <url-pattern>/RectangleAreaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CircleAreaController</servlet-name>
        <url-pattern>/CircleAreaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TriangleController</servlet-name>
        <url-pattern>/TriangleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Challenge2RectangleController</servlet-name>
        <url-pattern>/Challenge2RectangleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Challenge2TriangleController</servlet-name>
        <url-pattern>/Challenge2TriangleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Challenge2CircleController</servlet-name>
        <url-pattern>/Challenge2CircleController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
